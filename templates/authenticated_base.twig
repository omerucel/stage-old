{% extends 'base.twig' %}

{% block body %}
    <div class="container-fluid" style="margin-top: 10px;">
        <nav class="navbar navbar-light bg-faded">
            <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2" aria-controls="exCollapsingNavbar2" aria-expanded="false" aria-label="Toggle navigation">
                &#9776;
            </button>
            <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
                <a class="navbar-brand" href="/">Panel</a>
                <ul class="nav navbar-nav">
                    {% if user.isAllowed('project.list') or user.isAllowed('project.save') %}
                        <li class="nav-item dropdown {% if page == 'projects' %}active{% endif %}">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Projeler</a>
                            <div class="dropdown-menu">
                                {% if user.isAllowed('project.save') %}
                                    <a class="dropdown-item" href="/projects/save">Yeni Oluştur</a>
                                {% endif %}
                                {% if user.isAllowed('project.list') %}
                                    <a class="dropdown-item" href="/projects">Listele</a>
                                {% endif %}
                            </div>
                        </li>
                    {% endif %}
                    {% if user.isAllowed('users.list') or user.isAllowed('users.save') or user.isAllowed('users.activities') %}
                        <li class="nav-item dropdown {% if page == 'users' %}active{% endif %}">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Kullanıcılar</a>
                            <div class="dropdown-menu">
                                {% if user.isAllowed('users.save') %}
                                    <a class="dropdown-item" href="/users/save">Yeni Oluştur</a>
                                {% endif %}
                                {% if user.isAllowed('users.list') %}
                                    <a class="dropdown-item" href="/users">Listele</a>
                                {% endif %}
                                {% if user.isAllowed('users.activities') %}
                                    <a class="dropdown-item" href="/users/activities">Aktiviteler</a>
                                {% endif %}
                            </div>
                        </li>
                    {% endif %}
                    <li class="nav-item dropdown {% if page == 'settings' %}active{% endif %}">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Hesabım</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/users/save?id={{ user.id }}">Bilgilerim</a>
                            <a class="dropdown-item" href="/logout">Oturumu Kapat</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container-fluid" style="margin-top: 30px;">
        <div class="col-lg-12">
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}
{% extends '/base.twig' %}

{% block title %}Oturum Aç{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-xs-12 col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-header">
                        Oturum Aç
                    </div>
                    <div class="card-block">
                        {% include "messages.twig" %}
                        <form method="post">
                            <div class="form-group {% if has_email_error %}has-danger{% endif %}">
                                <label>E-Posta Adresi</label>
                                <input type="text" class="form-control" name="email" />
                            </div>
                            <div class="form-group {% if has_password_error %}has-danger{% endif %}">
                                <label>Şifre</label>
                                <input type="password" class="form-control" name="password" />
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success">Oturum Aç</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}